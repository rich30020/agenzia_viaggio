<section
  class="relative bg-cover text-white min-h-[90vh] flex items-center"
  style="background-image: url(<%= pacchettiimage %>); background-position: 20% center;"
>
  <div class="absolute inset-0 bg-black/60 z-0"></div>

  <div class="relative z-10 w-full px-6 md:px-16">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row gap-16 items-start justify-between">

      <div class="flex-1 flex flex-col justify-center items-center lg:items-start text-center lg:text-left">
        <h2 class="mb-6 text-5xl font-semibold leading-tight">
          I nostri pacchetti speciali
        </h2>
        <p class="mb-8 max-w-xl font-medium leading-relaxed text-gray-200">
          Nei nostri pacchetti troverete la felicit√†. Sfogliate le nostre offerte e prenotate la vostra vacanza dei sogni.
        </p>
        <a href="#offerte" class="font-semibold underline text-white hover:text-yellow-400 transition">
          Alla panoramica delle offerte
        </a>
      </div>

      <div class="flex-1 mt-10 grid grid-cols-1 gap-y-12 gap-x-8 sm:grid-cols-2">

        <% pacchetti.each do |pacchetto| %>
          <div class="flex flex-col h-full overflow-hidden rounded-lg bg-black/30 shadow-lg transition-shadow duration-300 hover:shadow-xl">
            <img
              src="<%= pacchetto[:image] %>"
              alt="<%= pacchetto[:title] %>"
              class="rounded-t-lg w-full h-56 object-cover"
            />
            <div class="flex flex-col flex-grow p-6">
              <p class="mb-2 text-sm font-medium" style="color: #b59f7f;">
                <%= pacchetto[:description] %>
              </p>
              <h3 class="mb-1 text-xl font-semibold text-white">
                <%= pacchetto[:title] %>
              </h3>
              <p class="mb-3 text-sm font-medium">
                <strong><%= pacchetto[:subtitle] %></strong>
              </p>
              <ul class="mb-3 max-h-28 overflow-auto flex-grow list-inside list-disc text-sm font-medium text-gray-300">
                <% pacchetto[:servizi].each do |servizio| %>
                  <li><%= servizio %></li>
                <% end %>
              </ul>
              <a href="#periodi" class="mb-1 inline-block text-sm font-medium underline text-white hover:text-yellow-400 transition">
                <%= pacchetto[:periods] %>
              </a>
              <a href="#dettagli" class="mt-auto whitespace-pre-line text-sm font-medium underline text-white hover:text-yellow-400 transition">
                <%= pacchetto[:details] %>
              </a>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
