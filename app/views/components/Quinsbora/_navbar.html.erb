<div class="absolute top-2 left-0 right-0 z-20 w-full bg-transparent px-4 sm:px-10">
  <div class="flex flex-col items-center justify-between sm:flex-row">
    
    <div class="flex w-full justify-end sm:hidden">
      <button id="menu-toggle" class="focus:outline-none text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <nav id="mobile-menu" class="hidden mt-3 flex-col space-y-3 text-lg text-white sm:mt-4 sm:flex sm:flex-row sm:space-x-12 sm:space-y-0 sm:text-xl items-center">
      <%= link_to 'Home', '/home', class: 'hover:text-gray-300' %>
      <%= link_to 'Scarica Itinerario', '/files/Guida_di_Viaggio.pdf', class: 'hover:text-gray-300', download: true %>
      <%= link_to 'Recensioni', '/recensioni', class: 'hover:text-gray-300' %>
      <%= link_to 'Contatti', '/contatti', class: 'hover:text-gray-300' %>
      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, class: 'hover:text-gray-300' %>
      <% end %>
    </nav>

  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuBtn = document.getElementById("menu-toggle");
    const navMenu = document.getElementById("mobile-menu");

    menuBtn.addEventListener("click", () => {
      navMenu.classList.toggle("hidden");
    });
  });
</script>
