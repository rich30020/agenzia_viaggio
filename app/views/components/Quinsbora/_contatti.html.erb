<section class="bg-[#1c1c1c] text-white px-6 py-20">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-4"><%= contattititle %></h2>
    <p class="text-gray-400 text-lg mb-12"><%= contattisubtitle %></p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 text-left mb-16">
      <div>
        <h3 class="text-xl font-semibold mb-3 flex items-center gap-2">üìç <span>Indirizzo</span></h3>
        <p class="text-gray-400 leading-relaxed text-base">
          <% indirizzo.each do |value| %>
            <%= value %><br />
          <% end %>
        </p>
      </div>

      <div>
        <h3 class="text-xl font-semibold mb-3 flex items-center gap-2">üìû <span>Contatti</span></h3>
        <ul class="text-gray-400 space-y-1 text-base">
          <% contatti.each do |value| %>
            <li><%= value %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-semibold mb-3 flex items-center gap-2">‚è∞ <span>Orari</span></h3>
        <ul class="text-gray-400 space-y-1 text-base">
          <% orari.each do |value| %>
            <li><%= value %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- FORM CONTATTI -->
    <div class="bg-[#2a2a2a] rounded-xl p-8 md:p-12 shadow-lg max-w-3xl mx-auto">
      <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <input type="text" placeholder="Nome" class="w-full px-4 py-3 rounded-md border border-gray-600 bg-transparent text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b58e5c]" />
        <input type="email" placeholder="Email" class="w-full px-4 py-3 rounded-md border border-gray-600 bg-transparent text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b58e5c]" />
        <textarea placeholder="Messaggio" rows="5" class="md:col-span-2 w-full px-4 py-3 rounded-md border border-gray-600 bg-transparent text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b58e5c]"></textarea>
        <button type="submit" class="md:col-span-2 bg-[#b58e5c] text-white px-6 py-3 rounded-md font-semibold hover:bg-[#a27d4a] transition-all shadow hover:shadow-lg">
          Invia messaggio
        </button>
      </form>
    </div>
  </div>
</section>
