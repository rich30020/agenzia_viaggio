<div
    class="relative bg-cover bg-center h-screen"
    style="background-image: url(<%= heroimage %>)"
>
    <div class="absolute inset-0 bg-black opacity-50"></div>

    <!-- Navbar -->
    <div class="absolute top-2 left-0 right-0 z-20 px-4 sm:px-10">
        <div class="flex flex-col sm:flex-row justify-between items-center">
            <img src=<%= herologo %> alt="Logo" class="h-12 sm:h-44 mt-2 sm:mt-5" />

            <nav class="flex flex-col sm:flex-row items-center text-white text-xs sm:text-xl space-y-2 sm:space-y-0 sm:space-x-12 mt-2 sm:mt-0">
                <a href="/home" class="hover:text-gray-300">Home</a>
                <a href="#about" class="hover:text-gray-300"><%= heronavbar1 %></a>
                <a href="#services" class="hover:text-gray-300"><%= heronavbar2 %></a>
                <a href="#contact" class="hover:text-gray-300"><%= heronavbar3 %></a>

                <div class="flex items-center space-x-2 sm:space-x-4 mt-2 sm:mt-0">
                    <button class="text-white hover:text-gray-300">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 sm:h-6 sm:w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1116.65 16.65z" />
                        </svg>
                    </button>
                    <span class="hover:text-gray-300 cursor-pointer text-xs sm:text-base"><%= heronavbar4 %></span>
                </div>
            </nav>
        </div>
    </div>

    <!-- Headline -->
    <div class="absolute bottom-16 left-4 sm:bottom-32 sm:left-24 z-10 text-white px-4 text-left">
        <p class="text-xs sm:text-lg font-light mb-2"><%= herotext %></p>
        <h1 class="text-2xl sm:text-5xl font-light"><%= herotitle %></h1>
    </div>
</div>
