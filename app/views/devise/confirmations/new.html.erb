<div class="container mt-10 max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-3xl font-semibold mb-6 text-center text-gray-800">
    Resend confirmation instructions
  </h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
            class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-md transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
